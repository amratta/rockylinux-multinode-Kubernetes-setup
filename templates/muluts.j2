---
apiVersion: "k8s.cni.cncf.io/v1"
kind: NetworkAttachmentDefinition
metadata:
   name: longhorn-sn
   namespace: kube-system
spec:
  config: '{
      "cniVersion": "0.3.1",
      "type": "ipvlan",
      "master": "{{ storage_nic }}",
      "mode": "l3",
      "ipam": {
        "type": "host-local",
        "subnet": "172.80.255.0/24",
        "rangeStart": "172.80.255.2",
        "rangeEnd": "172.80.255.254",
        "gateway":  "172.80.255.1"
      }
    }'
